

extends layout

block content
  .recipe-page
    h1= recipe.title
    .recipe-details
      if recipe.image
        img(src=recipe.image, alt=recipe.title, class="recipe-image")
      .recipe-info
        p
          strong Created by:
          span= recipe.user_firstname
        p
          strong Description:
          span= recipe.description
        p
          strong Ingredients:
          span= recipe.ingredients
        p
          strong Instructions:
          span= recipe.instructions
    // Button to go back to recipe list
    a(href="/recipes", class="back-button") Go back to Recipes List
